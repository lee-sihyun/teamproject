    //회원정보반환
    public List<LushUserDTO> getUserList(){
        Connection con=null;
        PreparedStatement pstmt=null;
        ResultSet rs=null;
        List<LushUserDTO> userList=new ArrayList<LushUserDTO>();
        
        try {
            con=getConnection();
            
            String sql="select * from lushuser order by id";
            
            pstmt=con.prepareStatement(sql);
            
            rs=pstmt.executeQuery();
            
            while(rs.next()) {
                LushUserDTO user= new LushUserDTO();
                user.setId(rs.getString("id"));
                user.setPasswd(rs.getString("passwd"));
                user.setName(rs.getString("name"));
                user.setNickname(rs.getString("nickname"));
                user.setEmail(rs.getString("email"));
                user.setPhone(rs.getString("phone"));
                user.setPostcode(rs.getString("mainaddrss"));
                user.setAddress1(rs.getString("address1"));
                user.setAddress2(rs.getString("address2"));
                user.setAddress2(rs.getString("address2"));
            }
            
        } catch (SQLException e) {
            System.out.println("[에러] getUserList SQL 에러 "+e.getMessage());
        } finally {
            close(con, pstmt, rs);
        }
        
        return userList;
    }
    
    //회원정보 단일 검색
    public LushUserDTO getUser(String id) {
        Connection con=null;
        PreparedStatement pstmt=null;
        ResultSet rs=null;
        LushUserDTO user=null;
        
        try {
            con=getConnection();
            
            String sql="select * from lushuser where id=?";
            pstmt=con.prepareStatement(sql);
            pstmt.setString(1,id);
            
            rs=pstmt.executeQuery();
            if(rs.next()) {
                user=new LushUserDTO();
                user.setNum(rs.getInt("num"));
                user.setId(rs.getString("id"));
                user.setPasswd(rs.getString("passwd"));
                user.setName(rs.getString("name"));
                user.setNickname(rs.getString("nickname"));
                user.setEmail(rs.getString("email"));
                user.setPhone(rs.getString("phone"));
                user.setPostcode(rs.getString("mainaddrss"));
                user.setAddress1(rs.getString("address1"));
                user.setAddress2(rs.getString("address2"));
                user.setStatus(rs.getInt("status"));
                user.setLastday(rs.getString("logdate"));
            }
            
            
        } catch (SQLException e) {
            System.out.println("[에러] getUser SQL 에러 "+e.getMessage());
        } finally {
            close(con, pstmt, rs);
        }
        
        return user;
    }
    
