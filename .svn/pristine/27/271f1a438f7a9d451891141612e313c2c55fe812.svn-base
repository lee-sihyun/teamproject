			con=getConnection();

			String sql="select test_seq.nextval from dual";
			pstmt =con.prepareStatement(sql);

			rs =pstmt.executeQuery();

			if(rs.next()) {
				num = rs.getInt(1);
			}

		} catch (SQLException e) {

			System.out.println("[에러] getTestNum() 메소드 SQL오류 =" + e.getMessage());

		} finally {
			close(con, pstmt, rs);
		}
		return num;

	}
	
