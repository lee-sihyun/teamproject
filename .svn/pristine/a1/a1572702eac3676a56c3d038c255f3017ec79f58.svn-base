  text-align: center;
  background: #1abc9c;
  color: white;
}

/* Column container */
.content {  
  width: 1180px;
  margin: 0 auto;
  height: 100%;
}

/* Sidebar/left column */
.side {
  width: 200px;
  height: 100%;
  float: left;
}

.side ul li {
    list-style-type: none;
    color: gray;
}
.side li a:visited{
    text-decoration: none;
}

/* Main column */
.main {   
  width: 880px;
  height: 100%;
  float: left;
  margin: 0 50px;
}

.mypage{
