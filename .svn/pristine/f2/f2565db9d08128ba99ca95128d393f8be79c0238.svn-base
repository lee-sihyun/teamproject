	//전체주문목록 출력
	
	public List<pageDTO>getPageList(int startRow, int endRow, String search, String keyword) {

		Connection con = null;
		PreparedStatement pstmt = null;
		ResultSet rs = null;
		List<pageDTO> pageList = new ArrayList<pageDTO>();

		try {
			
			con = getConnection();
			if (keyword.equals("")) {
				String sql = "select * from (select rownum rn, temp.* from (select * from order_table  order by order_date desc ) temp) where rn between ? and ?";

				pstmt = con.prepareStatement(sql);
				pstmt.setInt(1, startRow);
				pstmt.setInt(2, endRow);

			} else {
				String sql = "select * from (select rownum rn, temp.* from (select * from order_table  order by order_date desc where " + search+ " like '%'||?||'%' ) temp) where rn between ? and ?";

				pstmt = con.prepareStatement(sql);
				pstmt.setString(1, keyword);
				pstmt.setInt(2, startRow);
				pstmt.setInt(3, endRow);
			}

			rs = pstmt.executeQuery();

			while (rs.next()) {
				pageDTO page = new pageDTO();
				page.setOrderNo(rs.getString("order_no"));
				page.setId(rs.getString("id"));
				page.setName(rs.getString("name"));
				page.setPostcode(rs.getString("postcode"));
				page.setAddress1(rs.getString("address1"));
				page.setAddress2(rs.getString("address2"));
				page.setPhone(rs.getInt("phone"));
				page.setMessage(rs.getString("message"));
				page.setPayChoice(rs.getString("pay_choice"));
				page.setOrderDate(rs.getString("order_date"));
				page.setOrderStatus(rs.getInt("order_status"));
				page.setDeliveryStatus(rs.getInt("delivery_status"));
				pageList.add(page);
				
				
				/*
				 * 
				 * 
				 * */
				
			}

		} catch (SQLException e) {
			System.out.println("[에러]getProductList() 메소드 SQL 오류=" + e.getMessage());
		} finally {
			close(con, pstmt, rs);
		}
		return pageList;

	}

	
