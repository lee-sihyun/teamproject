<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%
    String message=(String)session.getAttribute("message");


    if(message==null){
        message="";
    } else {
        session.removeAttribute("message");
    }
    
%>
<style type="text/css">

.contentBox {
    margin: 0 auto;
    width: 800px;
    height: 500px;
    padding: 0px;
}

.innerBox{
    witdh: 80%;
    margin: 0 auto;
}

.member{
    width: 100%;
    text-align: center;
}

.userBox{
    width: 70%;
    margin: 0 auto;
    padding: 30px 15%;
}

.dataBox {
    width: 75%;
    margin: 0 auto;
}

.dataBox_re {
    margin: 15px;
}

h2 {
    color: black;
    padding-bottom: 30px;
    font-size: 25px;
    margin: 0 auto;
}

#user li {
    witdh:90%;
}

#message {
    color: red;
    font-weight: bold;
}

#login {
    witdh:90%;
}

#checkBox {
    text-align: left;
}

#loginBtn {
    background-color: black;
    color: white;
    font-size: 20px;
}

.inputLa {
    witdh:90%;
    border: 1px solid black;
    font-size: 18px;
}

ul li {
    font-size: 18px;
}

</style>

<div class="contentBox">
   <div class="innerBox">
   <div class="member">
       <h2>아이디 찾기</h2>
   </div>
   <div class="member">
       <form id="findUser" name="findUserForm" action="<%=request.getContextPath() %>/lushuser/findUser_action.jsp" method="post">
        <div class="userBox">
            <div class="dataBox">
                <div class="dataBox_re">
                    <input type="text" class="inputLa" name="name" placeholder="이름" required style="width: 100%; text-align: center; height: 50px;">
                </div>
                <div class="dataBox_re">
                    <input type="email" class="inputLa" name="email"  placeholder="가입이메일" required style="width: 100%; text-align: center; height: 50px;">
                </div>
                <div class="dataBox_re">
                    <button type="submit" id="loginBtn" style="width: 100%; height: 50px;"> 아이디찾기 </button>
                </div>
                <div id="message"><%=message%></div>
                <div id="findUser_menu" class="dataBox_re">
                    <button type="submit" id="login">로그인</button> |
                    <button type="submit" id="find_pw">비밀번호 찾기</button>
                </div>
            </div>
        </div>
       </form>
   </div>
   </div>
</div>

<script type="text/javascript">
$("#login").click(function() {
	location.href="<%=request.getContextPath()%>/index.jsp?workgroup=lushuser&work=login";
});

$("#find_pw").click(function() {
	location.href="<%=request.getContextPath()%>/index.jsp?workgroup=lushuser&work=findPass";
});

</script>
